@inherits Fluxor.Blazor.Web.Components.FluxorComponent
@switch (EraState.Value.Era.Id)
{
    case "start-era":
        <StartScreen />
        break;
    case "jesus-era":
        <Grid AbilitiesToDisplay="@Grid.AbilitiesFlag.Primary" StatsToDisplay="@Stats.StatsFlag.CurrentFaith"/>
        break;
    default:
        <Grid />
        break;
}

@code {
    [Inject]
    private IState<EraState> EraState { get; set; }
}
